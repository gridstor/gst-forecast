---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatDate } from '../../utils/dates';
import Chart from '../../components/Chart.astro';

export async function getStaticPaths() {
  const forecasts = await getCollection('forecasts');
  return forecasts.map(forecast => ({
    params: { slug: forecast.slug },
    props: { forecast },
  }));
}

const { forecast } = Astro.props;
const { Content } = await forecast.render();
const { title, date, region, description, chartData, tags } = forecast.data;
---

<BaseLayout title={title} description={description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <a href={`/forecasts?region=${region}`} class="text-sm font-medium text-blue-600 hover:text-blue-800">
          {region}
        </a>
        <time datetime={date.toISOString()} class="text-sm text-gray-500">
          {formatDate(date)}
        </time>
      </div>
      
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-xl text-gray-600">{description}</p>
      
      {tags && tags.length > 0 && (
        <div class="flex gap-2 mt-4">
          {tags.map(tag => (
            <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    {chartData && <Chart data={chartData} class="mb-8" />}

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>