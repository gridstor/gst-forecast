  document.getElementById('globalLocation')?.addEventListener('input', renderDefinitions);
  document.getElementById('globalLocationType')?.addEventListener('change', renderDefinitions);
  document.getElementById('globalProduct')?.addEventListener('input', renderDefinitions);
