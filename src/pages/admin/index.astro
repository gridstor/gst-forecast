<script>
  function showNotification(message: string, type: 'success' | 'error' | 'info' = 'info') {
    const notification = document.getElementById('notification');
    if (!notification) return;

    const bgColor = type === 'success' ? 'bg-green-500' : 
                   type === 'error' ? 'bg-red-500' : 'bg-blue-500';
    
    notification.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg text-white ${bgColor}`;
    notification.textContent = message;
    notification.classList.remove('hidden');

    setTimeout(() => {
      notification.classList.add('hidden');
    }, 3000);
  }

  document.addEventListener('DOMContentLoaded', function() {
    // Database health check
    document.getElementById('check-db-health')?.addEventListener('click', async function() {
      try {
        const response = await fetch('/api/curves/list.json');
        if (response.ok) {
          showNotification('Database connection healthy', 'success');
        } else {
          showNotification('Database connection issues detected', 'error');
        }
      } catch (error) {
        showNotification('Failed to check database health', 'error');
      }
    });

    // Clear cache
    document.getElementById('clear-cache')?.addEventListener('click', function() {
      // Clear browser cache
      if ('caches' in window) {
        caches.keys().then(names => {
          names.forEach(name => {
            caches.delete(name);
          });
        });
      }
      showNotification('Cache cleared successfully', 'success');
    });

    // Generate report
    document.getElementById('generate-report')?.addEventListener('click', function() {
      showNotification('Report generation feature coming soon', 'info');
    });

    // Export data
    document.getElementById('export-data')?.addEventListener('click', function() {
      showNotification('Data export feature coming soon', 'info');
    });

    // Test endpoints
    document.getElementById('test-endpoints')?.addEventListener('click', async function() {
      const endpoints = [
        '/api/curves/list.json',
        '/api/curves/definitions',
        '/api/curves/by-location'
      ];
      
      let allHealthy = true;
      for (const endpoint of endpoints) {
        try {
          const response = await fetch(endpoint);
          if (!response.ok) allHealthy = false;
        } catch (error) {
          allHealthy = false;
        }
      }
      
      showNotification(
        allHealthy ? 'All API endpoints healthy' : 'Some API endpoints have issues',
        allHealthy ? 'success' : 'error'
      );
    });

    // View logs
    document.getElementById('view-logs')?.addEventListener('click', function() {
      showNotification('Log viewing feature coming soon', 'info');
    });
  });
</script>

