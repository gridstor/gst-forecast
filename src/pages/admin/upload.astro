2024-01-01T01:00:00Z,55.75,75,$/MWh
2024-01-01T01:00:00Z,60.30,95,$/MWh`;

    const blob = new Blob([csvContent], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'curve_data_template.csv';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
    
    showNotification('CSV template downloaded successfully');
  }

  // Handle quick CSV upload
  async function handleQuickUpload() {
    const curveSelect = document.getElementById('quick-curve-select') as HTMLSelectElement;
    const fileInput = document.getElementById('quick-csv-file') as HTMLInputElement;
    const submitBtn = document.getElementById('submit-quick-upload') as HTMLButtonElement;
    
    if (!curveSelect.value || !fileInput.files || !fileInput.files[0]) {
      showNotification('Please select a curve instance and CSV file', true);
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Uploading...';

    try {
      const file = fileInput.files[0];
      const reader = new FileReader();
      
      reader.onload = async function(e: any) {
        try {
          const csvText = e.target.result;
          const parsedData = parseCSV(csvText);
          
          // Upload data directly to the selected curve instance
          const response = await fetch('/api/curve-upload/upload-data', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              curveInstanceId: parseInt(curveSelect.value),
              data: parsedData
            })
          });

          const result = await response.json();

          if (response.ok) {
            showNotification(`Successfully uploaded ${result.recordsInserted} data points`);
            document.getElementById('quick-upload-modal')?.classList.add('hidden');
            
            // Reset form
            curveSelect.value = '';
            fileInput.value = '';
          } else {
            showNotification(result.error || 'Upload failed', true);
          }
        } catch (error: any) {
          showNotification(`Error processing CSV: ${error.message}`, true);
        }
        
        submitBtn.disabled = false;
        submitBtn.textContent = 'Upload CSV';
      };
      
      reader.readAsText(file);
    } catch (error) {
      showNotification('Error reading file', true);
      submitBtn.disabled = false;
      submitBtn.textContent = 'Upload CSV';
    }
  }
