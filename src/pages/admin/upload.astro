<script>
  // Global state
  let curveDefinition: any = null;
  let curveInstance: any = null;
  let csvData: any[] = [];
  let suppressErrorNotifications = false;

  // Progress management
  function updateProgress(step: number) {
    const progressBar = document.getElementById('progress-bar')!;
    const progressText = document.getElementById('progress-text')!;
    
    progressBar.style.width = `${(step / 3) * 100}%`;
    progressText.textContent = `Step ${step} of 3`;
  }

  function showStep(stepNumber: number) {
    // Hide all steps
    document.getElementById('step-1')?.classList.add('hidden');
    document.getElementById('step-2')?.classList.add('hidden');
    document.getElementById('step-3')?.classList.add('hidden');
    
    // Show target step
    document.getElementById(`step-${stepNumber}`)?.classList.remove('hidden');
    
    updateProgress(stepNumber);
  }

  function showNotification(message: string, isError = false) {
    if (isError && suppressErrorNotifications) return;
    const notification = document.getElementById('notification')!;
    const notificationText = document.getElementById('notification-text')!;

    notification.className = `fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg text-white ${
      isError ? 'bg-red-500' : 'bg-green-500'
    }`;
    notificationText.textContent = message;
    notification.classList.remove('hidden');

    setTimeout(() => {
      notification.classList.add('hidden');
    }, 5000);
  }

  function getUploadMode(): string {
    return (document.querySelector('input[name="uploadMode"]:checked') as HTMLInputElement)?.value || 'new';
  }

  function updateInstanceSectionVisibility() {
    const instanceSection = document.getElementById('instance-section');
    if (!instanceSection) return;
    if (getUploadMode() === 'existing') {
      instanceSection.classList.add('hidden');
    } else {
      instanceSection.classList.remove('hidden');
    }
  }

  // Step 1: Create curve definition
  async function createCurveDefinition() {
    const productSelect = document.getElementById('product') as HTMLSelectElement;
    const productOther = document.getElementById('productOther') as HTMLInputElement;
    const productValue = productSelect.value === 'Other' ? productOther.value : productSelect.value;

    const unitsSelect = document.getElementById('units') as HTMLSelectElement;
    const unitsOther = document.getElementById('unitsOther') as HTMLInputElement;
    const unitsValue = unitsSelect.value === 'Other' ? unitsOther.value : unitsSelect.value;

    const formData = {
      curveName: (document.getElementById('curveName') as HTMLInputElement).value,
      market: (document.getElementById('market') as HTMLSelectElement).value,
      location: (document.getElementById('location') as HTMLSelectElement).value,
      product: productValue,
      curveType: (document.getElementById('curveType') as HTMLSelectElement).value,
      batteryDuration: (document.getElementById('batteryDuration') as HTMLSelectElement).value,
      granularity: (document.getElementById('granularityDef') as HTMLSelectElement).value,
      units: unitsValue
    };

    // Validate required fields
    if (!formData.curveName || !formData.market || !formData.location || !formData.product || !formData.curveType || !formData.granularity || !formData.units) {
      showNotification('Please fill in all required definition fields', true);
      return false;
    }

    try {
      const response = await fetch('/api/curve-upload/create-definition', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      });

      const result = await response.json();

      if (response.ok) {
        curveDefinition = result.curveDefinition;
        showNotification(result.isNew ? 'Curve definition created' : 'Found existing curve definition');
        return true;
      } else {
        showNotification(result.error || 'Failed to create curve definition', true);
        return false;
      }
    } catch (error) {
      showNotification('Network error creating curve definition', true);
      return false;
    }
  }

  // Create curve instance
  async function createCurveInstance() {
    const formData = {
      curveDefinitionId: curveDefinition.id,
      instanceVersion: (document.getElementById('instanceVersion') as HTMLInputElement).value,
      deliveryPeriodStart: (document.getElementById('deliveryPeriodStart') as HTMLInputElement).value,
      deliveryPeriodEnd: (document.getElementById('deliveryPeriodEnd') as HTMLInputElement).value,
      createdBy: (document.getElementById('createdBy') as HTMLInputElement).value,
      notes: (document.getElementById('notes') as HTMLTextAreaElement).value,
      modelType: (document.getElementById('modelType') as HTMLInputElement).value
    };

    // Validate required fields
    if (!formData.instanceVersion || !formData.deliveryPeriodStart || !formData.deliveryPeriodEnd) {
      showNotification('Please fill in all required instance fields', true);
      return false;
    }

    try {
      const response = await fetch('/api/curve-upload/create-instance', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      });

      const result = await response.json();

      if (response.ok) {
        curveInstance = result.curveInstance;
        showNotification('Curve instance created successfully');
        return true;
      } else {
        showNotification(result.error || 'Failed to create curve instance', true);
        return false;
      }
    } catch (error) {
      showNotification('Network error creating curve instance', true);
      return false;
    }
  }

  // Step 3: Upload price data
  async function uploadPriceData() {
    if (csvData.length === 0) {
      showNotification('No CSV data to upload', true);
      return false;
    }

    try {
      const response = await fetch('/api/curve-upload/upload-data', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          curveInstanceId: curveInstance.id,
          priceData: csvData
        })
      });

      const result = await response.json();

      if (response.ok) {
        // Suppress any incidental error toasts during UI reset after success
        suppressErrorNotifications = true;
        setTimeout(() => { suppressErrorNotifications = false; }, 3000);
        showSuccessMessage(result);
        return true;
      } else {
        if (result.validationErrors) {
          showNotification(`Validation errors: ${result.validationErrors.slice(0, 3).join(', ')}`, true);
        } else {
          showNotification(result.error || 'Failed to upload price data', true);
        }
        return false;
      }
    } catch (error) {
      showNotification('Network error uploading price data', true);
      return false;
    }
  }

  // CSV parsing
  function parseCSV(csvText: string) {
    const lines = csvText.trim().split('\n');
    const headers = lines[0].split(',').map(h => h.trim());
    
    const requiredColumns = ['timestamp', 'value'];
    const missingColumns = requiredColumns.filter(col => !headers.includes(col));
    
    if (missingColumns.length > 0) {
      throw new Error(`Missing required columns: ${missingColumns.join(', ')}`);
    }

    const data = [];
    for (let i = 1; i < lines.length; i++) {
      const values = lines[i].split(',').map(v => v.trim());
      const row: any = {};
      
      headers.forEach((header, index) => {
        row[header] = values[index];
      });

      data.push(row);
    }

    return data;
  }

  function showCSVPreview(data: any[]) {
    const preview = document.getElementById('csv-preview')!;
    const content = document.getElementById('preview-content')!;
    const stats = document.getElementById('preview-stats')!;

    // Show first 5 rows
    const previewData = data.slice(0, 5);
    const table = document.createElement('table');
    table.className = 'min-w-full text-sm';
    
    // Headers
    const thead = document.createElement('thead');
    const headerRow = document.createElement('tr');
    Object.keys(previewData[0]).forEach(key => {
      const th = document.createElement('th');
      th.className = 'px-2 py-1 text-left font-medium text-gray-900 border-b';
      th.textContent = key;
      headerRow.appendChild(th);
    });
    thead.appendChild(headerRow);
    table.appendChild(thead);

    // Rows
    const tbody = document.createElement('tbody');
    previewData.forEach(row => {
      const tr = document.createElement('tr');
      Object.values(row).forEach((value: any) => {
        const td = document.createElement('td');
        td.className = 'px-2 py-1 text-gray-700 border-b';
        td.textContent = value;
        tr.appendChild(td);
      });
      tbody.appendChild(tr);
    });
    table.appendChild(tbody);

    content.innerHTML = '';
    content.appendChild(table);

    stats.textContent = `${data.length} rows loaded (showing first ${Math.min(5, data.length)})`;
    preview.classList.remove('hidden');
  }

  function showSuccessMessage(result: any) {
    const successMessage = document.getElementById('success-message')!;
    const successDetails = document.getElementById('success-details')!;
    
    successDetails.innerHTML = `
      <strong>Curve:</strong> ${result.curveInstance.curveName}<br>
      <strong>Version:</strong> ${result.curveInstance.instanceVersion}<br>
      <strong>Records:</strong> ${result.recordsCreated} price points uploaded
    `;
    
    successMessage.classList.remove('hidden');
    
    // Hide all steps
    showStep(1); // This will hide current step but keep progress
    document.getElementById('step-1')?.classList.add('hidden');
  }

  function resetForm() {
    // Temporarily suppress error toasts that may fire from incidental reloads
    suppressErrorNotifications = true;
    setTimeout(() => { suppressErrorNotifications = false; }, 2000);
    // Reset global state
    curveDefinition = null;
    curveInstance = null;
    csvData = [];
    
    // Reset form fields (but preserve upload mode and other system settings)
    document.querySelectorAll('input:not([name="uploadMode"]), select, textarea').forEach((element: any) => {
      if (element.id === 'batteryDuration') element.value = 'UNKNOWN';
      else if (element.id === 'scenario') element.value = 'BASE';
      else if (element.id === 'degradationType') element.value = 'NONE';
      else if (element.id === 'createdBy') element.value = 'Upload System';
      else if (element.type !== 'file') element.value = '';
    });

    // Hide preview and success
    document.getElementById('csv-preview')?.classList.add('hidden');
    document.getElementById('success-message')?.classList.add('hidden');
    (document.getElementById('upload-final') as HTMLButtonElement)!.disabled = true;

    // Show step 1
    showStep(1);
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', function() {
    // Upload Mode handling
    const uploadModeRadios = document.querySelectorAll('input[name="uploadMode"]');
    const existingCurveSection = document.getElementById('existingCurveSection');
    const newCurveSection = document.getElementById('newCurveSection');
    
    // List elements
    const definitionFilter = document.getElementById('definitionFilter') as HTMLInputElement;
    const definitionsList = document.getElementById('definitionsList');
    const definitionCount = document.getElementById('definitionCount');
    const selectedDefinitionBanner = document.getElementById('selectedDefinitionBanner');
    
    const instanceFilter = document.getElementById('instanceFilter') as HTMLInputElement;
    const instancesList = document.getElementById('instancesList');
    const instanceCount = document.getElementById('instanceCount');
    const selectedInstanceBanner = document.getElementById('selectedInstanceBanner');

    // State variables
    let allDefinitions: any[] = [];
    let allInstances: any[] = [];
    let filteredDefinitions: any[] = [];
    let filteredInstances: any[] = [];
    let selectedDefinition: any = null;
    let selectedInstance: any = null;

    // Handle upload mode change
    uploadModeRadios.forEach(radio => {
      radio.addEventListener('change', function(e: any) {
        if (e.target.value === 'existing') {
          existingCurveSection?.classList.remove('hidden');
          newCurveSection?.classList.add('hidden');
          loadExistingDefinitions();
        } else {
          existingCurveSection?.classList.add('hidden');
          newCurveSection?.classList.remove('hidden');
          clearSelections();
        }
        updateInstanceSectionVisibility();
      });
    });

    // Load existing definitions
    async function loadExistingDefinitions() {
      try {
        const response = await fetch('/api/curves/definitions');
        const data = await response.json();
        console.log('Loaded definitions:', data); // Debug log
        
        if (Array.isArray(data)) {
          allDefinitions = data;
        } else if (data.definitions) {
          allDefinitions = data.definitions;
        } else {
          console.error('Unexpected data format:', data);
          allDefinitions = [];
        }
        
        filteredDefinitions = [...allDefinitions];
        renderDefinitionsList();
      } catch (error) {
        console.error('Error loading definitions:', error);
        allDefinitions = [];
        filteredDefinitions = [];
        renderDefinitionsList();
      }
    }

    // Definition filter functionality
    definitionFilter?.addEventListener('input', function(e: any) {
      const filterTerm = e.target.value.toLowerCase();
      
      filteredDefinitions = allDefinitions.filter(def => 
        def.curveName.toLowerCase().includes(filterTerm) ||
        def.market.toLowerCase().includes(filterTerm) ||
        def.location.toLowerCase().includes(filterTerm) ||
        def.product?.toLowerCase().includes(filterTerm) ||
        def.curveType?.toLowerCase().includes(filterTerm)
      );
      
      renderDefinitionsList();
    });

    function renderDefinitionsList() {
      if (!definitionsList || !definitionCount) return;
      
      // Update count
      definitionCount.textContent = `${filteredDefinitions.length} of ${allDefinitions.length}`;
      
      if (filteredDefinitions.length === 0) {
        definitionsList.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">No definitions found</div>';
      } else {
        definitionsList.innerHTML = filteredDefinitions.map(def => `
          <div class="p-2 hover:bg-blue-50 cursor-pointer rounded border border-gray-200 definition-item ${selectedDefinition?.id == def.id ? 'bg-blue-100 border-blue-300' : ''}" data-definition-id="${def.id}">
            <div class="font-medium text-gray-900 text-sm">${def.curveName}</div>
            <div class="text-xs text-gray-600">${def.market} â€¢ ${def.location}</div>
            <div class="text-xs text-gray-500">${def.product || 'N/A'} â€¢ ${def.batteryDuration} â€¢ ${def.granularity}</div>
          </div>
        `).join('');

        // Add click handlers
        document.querySelectorAll('.definition-item').forEach(item => {
          item.addEventListener('click', function(this: HTMLElement) {
            const definitionId = this.getAttribute('data-definition-id');
            const definition = allDefinitions.find(d => d.id == definitionId);
            selectDefinition(definition);
          });
        });
      }
    }

    function selectDefinition(definition: any) {
      console.log('selectDefinition called with:', definition);
      selectedDefinition = definition;
      selectedInstance = null; // Clear instance selection
      
      // Update banner
      document.getElementById('selectedDefName')!.textContent = definition.curveName;
      selectedDefinitionBanner?.classList.remove('hidden');
      
      // Clear instance banner
      selectedInstanceBanner?.classList.add('hidden');
      
      // In existing mode, hide instance creation fields to reduce confusion
      updateInstanceSectionVisibility();
      
      // Show preview
      showSelectedCurvePreview();
      
      // Re-render to update selection highlighting
      renderDefinitionsList();
      renderInstancesList();
      
      // Load instances for this definition
      console.log('Loading instances for definition:', definition.id);
      loadInstancesForDefinition(definition.id);
    }

    // Instance filter functionality
    instanceFilter?.addEventListener('input', function(e: any) {
      const filterTerm = e.target.value.toLowerCase();
      
      filteredInstances = allInstances.filter(inst => 
        inst.instanceVersion.toLowerCase().includes(filterTerm) ||
        inst.status.toLowerCase().includes(filterTerm) ||
        inst.createdBy?.toLowerCase().includes(filterTerm) ||
        inst.modelType?.toLowerCase().includes(filterTerm)
      );
      
      renderInstancesList();
    });

    function renderInstancesList() {
      console.log('renderInstancesList called', { 
        instancesList: !!instancesList, 
        instanceCount: !!instanceCount,
        allInstances: allInstances.length,
        filteredInstances: filteredInstances.length 
      });
      
      if (!instancesList || !instanceCount) {
        console.log('Missing DOM elements:', { instancesList: !!instancesList, instanceCount: !!instanceCount });
        return;
      }
      
      // Update count
      instanceCount.textContent = `${filteredInstances.length} of ${allInstances.length}`;
      
      if (filteredInstances.length === 0 && allInstances.length === 0) {
        instancesList.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">No instances for this definition</div>';
      } else if (filteredInstances.length === 0) {
        instancesList.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">No instances match filter</div>';
      } else {
        instancesList.innerHTML = filteredInstances.map(inst => `
          <div class="p-2 hover:bg-green-50 cursor-pointer rounded border border-gray-200 instance-item ${selectedInstance?.id == inst.id ? 'bg-green-100 border-green-300' : ''}" data-instance-id="${inst.id}">
            <div class="font-medium text-gray-900 text-sm">${inst.instanceVersion}</div>
            <div class="text-xs text-gray-600">Status: ${inst.status} â€¢ ${new Date(inst.createdAt).toLocaleDateString()}</div>
            <div class="text-xs text-gray-500">By: ${inst.createdBy}</div>
          </div>
        `).join('');

        // Add click handlers
        document.querySelectorAll('.instance-item').forEach(item => {
          item.addEventListener('click', function(this: HTMLElement) {
            const instanceId = this.getAttribute('data-instance-id');
            const instance = allInstances.find(i => i.id == instanceId);
            selectInstance(instance);
          });
        });
      }
    }

    function selectInstance(instance: any) {
      selectedInstance = instance;
      
      // Update banner
      document.getElementById('selectedInstName')!.textContent = instance.instanceVersion;
      selectedInstanceBanner?.classList.remove('hidden');
      
      // Hide the instance creation section when instance is selected
      document.getElementById('instance-section')?.classList.add('hidden');
      
      // Show preview
      showSelectedCurvePreview();
      
      // Re-render to update selection highlighting
      renderInstancesList();
    }

    // Load instances for selected definition
    async function loadInstancesForDefinition(definitionId: string) {
      try {
        if (instancesList) {
          instancesList.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">Loading instances...</div>';
        }
        if (instanceFilter) {
          instanceFilter.disabled = true;
        }
        const response = await fetch(`/api/curves/instances?definitionId=${definitionId}`);
        const data = await response.json();
        console.log('Loaded instances:', data); // Debug log

        // Support both { instances: [...] } and [...] shapes
        const instancesPayload = Array.isArray(data) ? data : (Array.isArray(data.instances) ? data.instances : []);
        allInstances = instancesPayload || [];
        filteredInstances = [...allInstances];
        
        // Enable instance filter
        if (instanceFilter) {
          instanceFilter.disabled = false;
          instanceFilter.placeholder = 'Filter instances...';
        }
        
        renderInstancesList();
      } catch (error) {
        console.error('Error loading instances:', error);
        allInstances = [];
        filteredInstances = [];
        renderInstancesList();
      }
    }

    // Clear selection handlers
    document.getElementById('clearDefinition')?.addEventListener('click', function() {
      clearDefinitionSelection();
    });

    document.getElementById('clearInstance')?.addEventListener('click', function() {
      clearInstanceSelection();
    });

    function clearDefinitionSelection() {
      selectedDefinition = null;
      selectedDefinitionBanner?.classList.add('hidden');
      renderDefinitionsList();
      clearInstanceSelection();
      
      // Disable instance filter and clear instances
      if (instanceFilter) {
        instanceFilter.disabled = true;
        instanceFilter.placeholder = 'Select definition first';
        instanceFilter.value = '';
      }
      allInstances = [];
      filteredInstances = [];
      instancesList!.innerHTML = '<div class="p-3 text-sm text-gray-500 text-center">Select a definition to see instances</div>';
      instanceCount!.textContent = 'Select definition first';
    }

    function clearInstanceSelection() {
      selectedInstance = null;
      selectedInstanceBanner?.classList.add('hidden');
      renderInstancesList();
    }

    function clearSelections() {
      selectedDefinition = null;
      selectedInstance = null;
      allInstances = [];
      filteredInstances = [];
      
      // Clear banners
      selectedDefinitionBanner?.classList.add('hidden');
      selectedInstanceBanner?.classList.add('hidden');
      
      // Hide preview
      document.getElementById('selectedCurvePreview')?.classList.add('hidden');
      
      // Show/hide instance section based on mode
      updateInstanceSectionVisibility();
      
      // Re-render lists
      renderDefinitionsList();
      renderInstancesList();
    }



    // Product dropdown handling
    document.getElementById('product')?.addEventListener('change', function(e: any) {
      const productOther = document.getElementById('productOther') as HTMLInputElement;
      if (e.target.value === 'Other') {
        productOther.classList.remove('hidden');
        productOther.required = true;
      } else {
        productOther.classList.add('hidden');
        productOther.required = false;
        productOther.value = '';
      }
    });

    // Units dropdown handling
    document.getElementById('units')?.addEventListener('change', function(e: any) {
      const unitsOther = document.getElementById('unitsOther') as HTMLInputElement;
      if (e.target.value === 'Other') {
        unitsOther.classList.remove('hidden');
        unitsOther.required = true;
      } else {
        unitsOther.classList.add('hidden');
        unitsOther.required = false;
        unitsOther.value = '';
      }
    });

    // Upload mode handling
    document.getElementById('show-quick-upload')?.addEventListener('click', function() {
      document.getElementById('quick-upload-modal')?.classList.remove('hidden');
      loadCurveInstances();
    });

    document.getElementById('show-full-workflow')?.addEventListener('click', function() {
      document.getElementById('full-workflow-container')?.classList.remove('hidden');
    });

    document.getElementById('close-quick-upload')?.addEventListener('click', function() {
      document.getElementById('quick-upload-modal')?.classList.add('hidden');
    });

    document.getElementById('cancel-quick-upload')?.addEventListener('click', function() {
      document.getElementById('quick-upload-modal')?.classList.add('hidden');
    });

    // Download template
    document.getElementById('download-template')?.addEventListener('click', function() {
      downloadCSVTemplate();
    });

    // Copy fields handlers
    document.getElementById('copyDefinitionFields')?.addEventListener('click', function() {
      copyDefinitionFields();
    });

    document.getElementById('copyInstanceFields')?.addEventListener('click', function() {
      copyInstanceFields();
    });

    // Clear selection handlers
    document.getElementById('clearDefinition')?.addEventListener('click', function() {
      selectedDefinition = null;
      selectedInstance = null;
      selectedDefinitionBanner?.classList.add('hidden');
      selectedInstanceBanner?.classList.add('hidden');
      document.getElementById('selectedCurvePreview')?.classList.add('hidden');
      document.getElementById('instance-section')?.classList.remove('hidden');
      renderDefinitionsList();
      renderInstancesList();
    });

    document.getElementById('clearInstance')?.addEventListener('click', function() {
      selectedInstance = null;
      selectedInstanceBanner?.classList.add('hidden');
      document.getElementById('instance-section')?.classList.remove('hidden');
      showSelectedCurvePreview();
      renderInstancesList();
    });

    // Quick CSV upload
    document.getElementById('quick-csv-file')?.addEventListener('change', function(e: any) {
      const submitBtn = document.getElementById('submit-quick-upload') as HTMLButtonElement;
      const curveSelect = document.getElementById('quick-curve-select') as HTMLSelectElement;
      submitBtn.disabled = !(e.target.files[0] && curveSelect.value);
    });

    document.getElementById('quick-curve-select')?.addEventListener('change', function(e: any) {
      const submitBtn = document.getElementById('submit-quick-upload') as HTMLButtonElement;
      const fileInput = document.getElementById('quick-csv-file') as HTMLInputElement;
      submitBtn.disabled = !(e.target.value && fileInput.files && fileInput.files[0]);
    });

    document.getElementById('submit-quick-upload')?.addEventListener('click', async function() {
      await handleQuickUpload();
    });

    // Form validation will now be done on final upload button

    // CSV upload
    document.getElementById('csvFile')?.addEventListener('change', function(e: any) {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function(e: any) {
        try {
          csvData = parseCSV(e.target.result);
          showCSVPreview(csvData);
          (document.getElementById('upload-final') as HTMLButtonElement)!.disabled = false;
        } catch (error: any) {
          showNotification(`CSV parsing error: ${error.message}`, true);
          csvData = [];
          (document.getElementById('upload-final') as HTMLButtonElement)!.disabled = true;
        }
      };
      reader.readAsText(file);
    });

    // Final upload - handle all steps at once
    document.getElementById('upload-final')?.addEventListener('click', async function() {
      const button = this as HTMLButtonElement;
      button.disabled = true;
      
      const uploadMode = (document.querySelector('input[name="uploadMode"]:checked') as HTMLInputElement)?.value || 'new';
      
      if (uploadMode === 'existing') {
        // Use existing curve
        if (!selectedDefinition) {
          alert('Please select a curve definition');
          button.disabled = false;
          return;
        }
        
        // Set global variables for existing curve
        curveDefinition = { id: selectedDefinition.id };
        
        if (selectedInstance) {
          // Use existing instance
          curveInstance = { id: selectedInstance.id };
          button.textContent = 'Uploading data to existing curve instance...';
        } else {
          // No instance selected - create one first
          button.textContent = 'Creating instance for existing definition...';
          
          // Create instance using existing definition
          if (!(await createCurveInstance())) {
            button.disabled = false;
            button.textContent = 'Upload Complete Curve';
            return;
          }
          
          button.textContent = 'Uploading data to new instance...';
        }
        
        // Upload data
      const success = await uploadPriceData();
      
      button.disabled = false;
      button.textContent = 'Upload Complete Curve';
      } else {
        // Create new curve
        button.textContent = 'Creating curve...';

        // Validate and create definition
        if (!(await createCurveDefinition())) {
          button.disabled = false;
          button.textContent = 'Upload Complete Curve';
          return;
        }

        button.textContent = 'Creating instance...';
        
        // Validate and create instance
        if (!(await createCurveInstance())) {
          button.disabled = false;
          button.textContent = 'Upload Complete Curve';
          return;
        }

        button.textContent = 'Uploading data...';

        // Upload data
        const success = await uploadPriceData();
        
        button.disabled = false;
        button.textContent = 'Upload Complete Curve';
      }
    });

    // Upload another
    document.getElementById('upload-another')?.addEventListener('click', function() {
      resetForm();
