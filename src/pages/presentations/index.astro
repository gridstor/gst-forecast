---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Analytics Presentations">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Analytics Presentations</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <a href="/presentations/goleta-budget" class="block">
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6">
          <h2 class="text-xl font-semibold mb-2">Goleta Budget Forecast</h2>
          <p class="text-gray-600">Analysis and forecasting of the Goleta market budget</p>
        </div>
      </a>
      <a href="/presentations/hidden-lakes-budget" class="block">
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6">
          <h2 class="text-xl font-semibold mb-2">Hidden Lakes Budget Forecast</h2>
          <p class="text-gray-600">Analysis and forecasting of the Hidden Lakes market budget</p>
        </div>
      </a>
    </div>
  </div>
</Layout> 