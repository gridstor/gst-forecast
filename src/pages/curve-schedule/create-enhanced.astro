---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Enhanced Curve Schedule Creation">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Enhanced Curve Schedule Creation</h1>
        <p class="text-gray-600">Create complete curve schedules with delivery planning and instance templates. Preview before finalizing.</p>
      </div>

      <!-- Progress Indicator -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-medium">1</div>
            <div class="ml-2 text-sm font-medium text-blue-600">Configure</div>
          </div>
          <div class="flex-1 h-0.5 bg-gray-200 mx-4"></div>
          <div class="flex items-center">
            <div id="previewStep" class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-medium">2</div>
            <div class="ml-2 text-sm font-medium text-gray-600">Preview</div>
          </div>
          <div class="flex-1 h-0.5 bg-gray-200 mx-4"></div>
          <div class="flex items-center">
            <div id="confirmStep" class="w-8 h-8 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center text-sm font-medium">3</div>
            <div class="ml-2 text-sm font-medium text-gray-600">Confirm</div>
          </div>
        </div>
      </div>

      <!-- Main Form -->
      <div id="configForm" class="bg-white shadow-lg rounded-lg p-6">
        <form id="enhancedScheduleForm" class="space-y-8">
          
          <!-- Curve Definition Section -->
          <div class="border-b border-gray-200 pb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Curve Definition</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              
              <!-- Market -->
              <div>
                <label for="market" class="block text-sm font-medium text-gray-700 mb-2">Market *</label>
                <div class="relative">
                  <select id="market" name="market" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Select Market</option>
                    <option value="ERCOT">ERCOT</option>
                    <option value="CAISO">CAISO</option>
                    <option value="PJM">PJM</option>
                    <option value="MISO">MISO</option>
                    <option value="SPP">SPP</option>
                    <option value="NYISO">NYISO</option>
                    <option value="ISO-NE">ISO-NE</option>
                    <option value="CUSTOM">Custom...</option>
                  </select>
                  <input type="text" id="marketCustom" name="marketCustom" placeholder="Enter custom market" 
                         class="hidden w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-2">
                </div>
              </div>

              <!-- Location -->
              <div>
                <label for="location" class="block text-sm font-medium text-gray-700 mb-2">Location *</label>
                <input type="text" id="location" name="location" required 
                       placeholder="e.g., Houston, SP15, Zone A"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Product -->
              <div>
                <label for="product" class="block text-sm font-medium text-gray-700 mb-2">Product *</label>
                <input type="text" id="product" name="product" required 
                       placeholder="e.g., Aurora_Houston_Revenue_4h"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Curve Type -->
              <div>
                <label for="curveType" class="block text-sm font-medium text-gray-700 mb-2">Curve Type *</label>
                <div class="relative">
                  <select id="curveType" name="curveType" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Select Type</option>
                    <option value="REVENUE">Revenue</option>
                    <option value="ENERGY">Energy</option>
                    <option value="ENERGY_ARB">Energy Arbitrage</option>
                    <option value="AS">Ancillary Services</option>
                    <option value="TB2">Two-Hour Battery</option>
                    <option value="TB4">Four-Hour Battery</option>
                    <option value="RA">Resource Adequacy</option>
                    <option value="DA">Day-Ahead</option>
                    <option value="RT">Real-Time</option>
                    <option value="CUSTOM">Custom...</option>
                  </select>
                  <input type="text" id="curveTypeCustom" name="curveTypeCustom" placeholder="Enter custom curve type" 
                         class="hidden w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-2">
                </div>
              </div>

              <!-- Battery Duration -->
              <div>
                <label for="batteryDuration" class="block text-sm font-medium text-gray-700 mb-2">Battery Duration</label>
                <div class="relative">
                  <select id="batteryDuration" name="batteryDuration" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="UNKNOWN">Unknown</option>
                    <option value="2H">2 Hour</option>
                    <option value="2.6H">2.6 Hour</option>
                    <option value="4H">4 Hour</option>
                    <option value="8H">8 Hour</option>
                    <option value="CUSTOM">Custom...</option>
                  </select>
                  <input type="text" id="batteryDurationCustom" name="batteryDurationCustom" placeholder="Enter custom duration" 
                         class="hidden w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-2">
                </div>
              </div>

              <!-- Scenario -->
              <div>
                <label for="scenario" class="block text-sm font-medium text-gray-700 mb-2">Scenario</label>
                <div class="relative">
                  <select id="scenario" name="scenario" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="BASE">Base</option>
                    <option value="LOW">Low</option>
                    <option value="HIGH">High</option>
                    <option value="P50">P50</option>
                    <option value="P90">P90</option>
                    <option value="P10">P10</option>
                    <option value="DOWNSIDE">Downside</option>
                    <option value="UPSIDE">Upside</option>
                    <option value="WORST">Worst</option>
                    <option value="BEST">Best</option>
                    <option value="CUSTOM">Custom...</option>
                  </select>
                  <input type="text" id="scenarioCustom" name="scenarioCustom" placeholder="Enter custom scenario" 
                         class="hidden w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-2">
                </div>
              </div>
            </div>
          </div>

          <!-- Instance Template Section -->
          <div class="border-b border-gray-200 pb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Delivery & Instance Details</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              
              <!-- Delivery Period Start -->
              <div>
                <label for="deliveryPeriodStart" class="block text-sm font-medium text-gray-700 mb-2">Delivery Start *</label>
                <input type="datetime-local" id="deliveryPeriodStart" name="deliveryPeriodStart" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Delivery Period End -->
              <div>
                <label for="deliveryPeriodEnd" class="block text-sm font-medium text-gray-700 mb-2">Delivery End *</label>
                <input type="datetime-local" id="deliveryPeriodEnd" name="deliveryPeriodEnd" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Degradation Control -->
              <div>
                <label for="degradationStartDate" class="block text-sm font-medium text-gray-700 mb-2">
                  Degradation
                  <span class="text-xs text-gray-500 font-normal ml-1">(Optional)</span>
                </label>
                <div class="space-y-2">
                  <div class="flex items-center space-x-2">
                    <input type="radio" id="noDegradation" name="degradationOption" value="none" checked
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                    <label for="noDegradation" class="text-sm text-gray-700">No degradation</label>
                  </div>
                  <div class="flex items-center space-x-2">
                    <input type="radio" id="withDegradation" name="degradationOption" value="date"
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                    <label for="withDegradation" class="text-sm text-gray-700">Degradation starts on:</label>
                  </div>
                  <div id="degradationDateContainer" class="ml-6 hidden">
                    <input type="date" id="degradationStartDate" name="degradationStartDate" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">Must be within delivery period</p>
                  </div>
                </div>
              </div>

              <!-- Granularity -->
              <div>
                <label for="granularity" class="block text-sm font-medium text-gray-700 mb-2">Granularity</label>
                <select id="granularity" name="granularity" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="HOURLY">Hourly</option>
                  <option value="DAILY">Daily</option>
                  <option value="MONTHLY" selected>Monthly</option>
                  <option value="ANNUAL">Annual</option>
                </select>
              </div>

              <!-- Instance Version -->
              <div>
                <label for="instanceVersion" class="block text-sm font-medium text-gray-700 mb-2">Instance Version</label>
                <input type="text" id="instanceVersion" name="instanceVersion" value="v1" 
                       placeholder="v1, v2, final, etc."
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>
            </div>

            <!-- Delivery Period Summary -->
            <div id="deliveryPeriodSummary" class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-md hidden">
              <h4 class="text-sm font-medium text-blue-900 mb-2">Delivery Period Summary</h4>
              <div class="text-sm text-blue-800">
                <div>Duration: <span id="deliveryDuration">-</span> days</div>
                <div id="degradationInfo" class="hidden">Degradation starts: <span id="degradationDays">-</span> days from delivery start</div>
              </div>
            </div>
          </div>

          <!-- Schedule Configuration Section -->
          <div class="border-b border-gray-200 pb-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Schedule Configuration</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              
              <!-- Frequency -->
              <div>
                <label for="frequency" class="block text-sm font-medium text-gray-700 mb-2">Update Frequency *</label>
                <select id="frequency" name="frequency" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="DAILY">Daily</option>
                  <option value="WEEKLY">Weekly</option>
                  <option value="MONTHLY" selected>Monthly</option>
                  <option value="QUARTERLY">Quarterly</option>
                  <option value="ANNUALLY">Annually</option>
                  <option value="ON_DEMAND">On Demand</option>
                </select>
              </div>

              <!-- Day of Week (for weekly) -->
              <div id="dayOfWeekContainer" class="hidden">
                <label for="dayOfWeek" class="block text-sm font-medium text-gray-700 mb-2">Day of Week</label>
                <select id="dayOfWeek" name="dayOfWeek" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="0">Sunday</option>
                  <option value="1">Monday</option>
                  <option value="2">Tuesday</option>
                  <option value="3">Wednesday</option>
                  <option value="4">Thursday</option>
                  <option value="5">Friday</option>
                  <option value="6">Saturday</option>
                </select>
              </div>

              <!-- Day of Month (for monthly) -->
              <div id="dayOfMonthContainer">
                <label for="dayOfMonth" class="block text-sm font-medium text-gray-700 mb-2">Day of Month</label>
                <input type="number" id="dayOfMonth" name="dayOfMonth" min="1" max="31" value="5"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Time of Day -->
              <div>
                <label for="timeOfDay" class="block text-sm font-medium text-gray-700 mb-2">Time of Day</label>
                <input type="time" id="timeOfDay" name="timeOfDay" value="09:00"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Freshness Days -->
              <div>
                <label for="freshnessDays" class="block text-sm font-medium text-gray-700 mb-2">Freshness Days</label>
                <input type="number" id="freshnessDays" name="freshnessDays" value="30" min="1"
                       placeholder="30 (1 month)"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <p class="text-sm text-gray-500 mt-1">How long the data stays fresh (days)</p>
              </div>

              <!-- Responsible Team -->
              <div>
                <label for="responsibleTeam" class="block text-sm font-medium text-gray-700 mb-2">Responsible Team *</label>
                <select id="responsibleTeam" name="responsibleTeam" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="Analytics">Analytics</option>
                  <option value="Finance">Finance</option>
                  <option value="M&A">M&A</option>
                  <option value="Commercial">Commercial</option>
                  <option value="Goldman">Goldman</option>
                  <option value="Trading/Risk">Trading/Risk</option>
                </select>
              </div>

              <!-- Importance -->
              <div>
                <label for="importance" class="block text-sm font-medium text-gray-700 mb-2">Importance Level</label>
                <select id="importance" name="importance" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <option value="1">1 - Low</option>
                  <option value="2">2</option>
                  <option value="3" selected>3 - Medium</option>
                  <option value="4">4</option>
                  <option value="5">5 - Critical</option>
                </select>
              </div>
            </div>

            <!-- Notification Emails -->
            <div class="mt-6">
              <label for="notificationEmails" class="block text-sm font-medium text-gray-700 mb-2">Notification Emails</label>
              <input type="text" id="notificationEmails" name="notificationEmails" 
                     placeholder="email1@company.com, email2@company.com"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              <p class="text-sm text-gray-500 mt-1">Comma-separated email addresses</p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-between items-center pt-6">
            <button type="button" id="cancelBtn" 
                    class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
              Cancel
            </button>
            <div class="space-x-4">
              <button type="button" id="previewBtn"
                      class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Preview Schedule
              </button>
              <button type="button" id="createDirectBtn"
                      class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                Create Directly
              </button>
            </div>
          </div>
        </form>
      </div>

      <!-- Preview Modal -->
      <div id="previewModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-8 mx-auto p-5 border w-11/12 max-w-4xl shadow-lg rounded-md bg-white">
          <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Schedule Preview</h3>
            
            <!-- Preview Content -->
            <div id="previewContent" class="space-y-6">
              <!-- Will be populated by JavaScript -->
            </div>
            
            <!-- Modal Actions -->
            <div class="flex justify-end space-x-3 pt-6 mt-6 border-t border-gray-200">
              <button type="button" id="editPreviewBtn" 
                      class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Edit
              </button>
              <button type="button" id="confirmCreateBtn" 
                      class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Confirm & Create
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Loading and Status Messages -->
      <div id="loadingMessage" class="hidden mt-4 p-4 bg-blue-50 border border-blue-200 rounded-md">
        <div class="flex items-center">
          <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-blue-600 mr-2"></div>
          <span class="text-blue-700" id="loadingText">Processing...</span>
        </div>
      </div>

      <div id="successMessage" class="hidden mt-4 p-4 bg-green-50 border border-green-200 rounded-md">
        <div class="flex items-center">
          <svg class="h-4 w-4 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-green-700" id="successText">Success!</span>
        </div>
      </div>

      <div id="errorMessage" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-md">
        <div class="flex items-center">
          <svg class="h-4 w-4 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <span class="text-red-700" id="errorText">Error occurred</span>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/enhanced-schedule-form.js" is:inline></script>
</Layout> 