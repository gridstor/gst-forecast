---
import Layout from '../../layouts/Layout.astro';
import { query } from '../../lib/db';

// Get some system stats for the dashboard
let systemStats = {
  totalCurves: 0,
  totalInstances: 0,
  totalPricePoints: 0,
  lastActivity: 'N/A'
};

try {
  // Get curve definitions count
  const curveResult = await query(`
    SELECT COUNT(*) as count 
    FROM "Forecasts"."CurveDefinition" 
    WHERE "isActive" = true
  `);
  systemStats.totalCurves = curveResult.rows[0]?.count || 0;

  // Get curve instances count
  const instanceResult = await query(`
    SELECT COUNT(*) as count 
    FROM "Forecasts"."CurveInstance"
  `);
  systemStats.totalInstances = instanceResult.rows[0]?.count || 0;

  // Get price points count
  const priceResult = await query(`
    SELECT COUNT(*) as count 
    FROM "Forecasts"."PriceForecast"
  `);
  systemStats.totalPricePoints = priceResult.rows[0]?.count || 0;

  // Get last activity
  const activityResult = await query(`
    SELECT MAX("createdAt") as last_activity
    FROM "Forecasts"."CurveDefinition"
  `);
  const lastActivity = activityResult.rows[0]?.last_activity;
  if (lastActivity) {
    systemStats.lastActivity = new Date(lastActivity).toLocaleDateString();
  }

} catch (error) {
  console.error('Error fetching system stats:', error);
}
