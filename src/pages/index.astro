---
import Layout from '../layouts/Layout.astro';
import CaisoTenYearForecastChart from '../components/CaisoTenYearForecastChart.astro';
import ErcotHoustonTenYearForecastChart from '../components/ErcotHoustonTenYearForecastChart.astro';
import ErcotSouthTenYearForecastChart from '../components/ErcotSouthTenYearForecastChart.astro';
---

<Layout title="Current Forecasts">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Current Forecasts</h1>
      <p class="text-xl text-gray-600">
        Two year monthly and ten year annual revenue forecasts for CAISO and ERCOT locations
      </p>
    </div>

    <div class="flex flex-col gap-12">
      <section class="bg-white rounded-lg shadow">
        <div class="p-6">
          <a href="/markets/caiso#sp15" class="block mb-4 hover:text-gs-blue transition-colors">
            <h2 class="text-2xl font-semibold hover:cursor-pointer">
              SP-15 10-year Battery Revenue
              <span class="text-sm font-normal text-gray-500 ml-2">Click for detailed analysis →</span>
            </h2>
          </a>
          <CaisoTenYearForecastChart />
        </div>
      </section>
      
      <section class="bg-white rounded-lg shadow">
        <div class="p-6">
          <a href="/markets/ercot#houston" class="block mb-4 hover:text-gs-blue transition-colors">
            <h2 class="text-2xl font-semibold hover:cursor-pointer">
              ERCOT Houston 10-year Battery Revenue
              <span class="text-sm font-normal text-gray-500 ml-2">Click for detailed analysis →</span>
            </h2>
          </a>
          <ErcotHoustonTenYearForecastChart />
        </div>
      </section>
      
      <section class="bg-white rounded-lg shadow">
        <div class="p-6">
          <a href="/markets/ercot#south" class="block mb-4 hover:text-gs-blue transition-colors">
            <h2 class="text-2xl font-semibold hover:cursor-pointer">
              ERCOT South 10-year Battery Revenue
              <span class="text-sm font-normal text-gray-500 ml-2">Click for detailed analysis →</span>
            </h2>
          </a>
          <ErcotSouthTenYearForecastChart />
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  section {
    transition: border-color 0.2s ease;
  }
  
  section:hover {
    @apply border-2 border-gs-blue;
  }
</style>