---
import Layout from '../../layouts/Layout.astro';
import MarketSubNav from '../../components/MarketSubNav.astro';
import CaisoTenYearForecastChart from '../../components/CaisoTenYearForecastChart.astro';
---

<Layout title="CAISO Market Analysis">
  <MarketSubNav market="caiso" />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">CAISO Market Analysis</h1>
      <p class="text-xl text-gray-600 mb-8">
        Detailed revenue projections and market analysis for CAISO SP-15
      </p>
    </div>

    <section id="sp15" class="bg-white rounded-lg shadow p-6">
      <h2 class="text-2xl font-semibold mb-6">SP-15 Zone</h2>
      <div class="prose max-w-none mb-8">
        <ul>
          <li>Market dynamics and trends analysis</li>
          <li>Revenue projection methodology</li>
          <li>Key market drivers and assumptions</li>
        </ul>
      </div>
      <CaisoTenYearForecastChart />
    </section>

    <!-- Additional sections... -->
  </div>
</Layout> 